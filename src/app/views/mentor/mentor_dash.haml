%div.col-lg-10.col-lg-offset-1{"ng-controller" => "mentorDashController"}
  %h1 Welcome {{user.name}}!
  %button.btn-status.btn.m-b-xs.btn-sm.btn-primary.btn-addon
    %input#toggle-1{"ng-change" => "editStatus(mentor.status, mentor.id)", "ng-click" => 'changeClass()', "ng-model" => "mentor.status", :type => "checkbox"}
    %span{"ng-if" => "mentor.status == true", "ng-show" => "mentor.status"} online
    %span{"ng-if" => "mentor.status == false", "ng-hide" => "mentor.status" } offline

    %h4 All Questions
    %button.btn.m-b-xs.w-xs.btn-default.btn-block{'ng-click'=> "viewAll(question)"} View All Questions
    .m-l-lg.panel.b-a{'ng-repeat' => "question in questions"}
      .panel-heading.pos-rlt.b-b.b-light
        %span.arrow.left
        %a{:href => ""} {{question.title}}
        %span.text-muted.m-l-sm.pull-right
          %i.fa.fa-clock-o
      .panel-body
        %div Language: {{question.language}}
        %div Question: {{question.body}}
        %span Submited
        %i.icon-clock
          %time-ago{:format => "MM/dd/yyyy", "from-time" => "{{ question.created_at}}"}
        by
        %i.icon-fire
        %span {{question.student.name}}
        %p{"ng-if" => "question.response.status == false"} Claimed {{question.response.created_at | amDifference : question.created_at : 'minutes' }} minutes later by {{question.mentor.name}}.

%div.col-lg-10.col-md-offset-1.wrapper-md{"ng-controller" => "mentorDashController"}
  %form.m-b-md.ng-pristine.ng-valid{:action => "#"}
    .input-group
      %input.form-control.input-lg{"ng-model" => "search", :placeholder => "Search", :type => "text"}

  %uib-tabset{:active => "active"}
    %uib-tab
      %uib-tab-heading
        %i.icon-puzzle
        Unclaimed
      .col-lg-12.b-a
        .panel.m-t-md{"ng-repeat" => "question in unclaimedQuestions | filter: search"}
          .wrapper-lg
            %h2.m-t-none
            %h3 {{question.title}}
            .text-muted

              %span Submited
              %i.icon-clock
              %time-ago{:format => "MM/dd/yyyy", "from-time" => "{{ question.created_at}}"}
              by
              %i.icon-fire
              %span
                %span {{question.student.name}}
            %div
            %br
              %p {{question.body}}

            .line.line-lg.b-b.b-light
            .text-muted
              %p language: {{question.language}}
    %uib-tab
      %uib-tab-heading
        %i.icon-star
        Questions I Claimed
      .col-lg-12.b-a
        .panel.m-t-md{"ng-repeat" => "question in claimedQuestions | filter: search"}
          .wrapper-lg
            %h2.m-t-none
            %h3 {{question.title}}
            .text-muted
              %span Submited
              %i.icon-clock
              %time-ago{:format => "MM/dd/yyyy", "from-time" => "{{ question.created_at}}"}
              by
              %i.icon-fire
              %span
                %span {{question.student.name}}
              %span{"ng-if" => "question.screenshot == false"} Picture: {{question.screenshot}}
            %div
            %br
              %p {{question.body}}
              %div{"ng-if" => "question.response.status == true"}
                %h4 ANSWER:
                %p{"hm-dots-class" => "dots", "hm-less-text" => "read less", "hm-limit" => "100", "hm-link-class" => "links", "hm-more-text" => "read more", "hm-read-more" => "", "hm-text" => "{{question.response.answer}}"}
            .line.line-lg.b-b.b-light
            .text-muted

              %a.btn.btn-default.btn-xs{:href => "", 'ng-init'=> "showForm = false", 'ng-click'=> "showForm = !showForm"}
                %i.fa.fa-mail-reply.text-muted
                Answer Now
              %form{"ng-show" => "showForm", "ng-submit" => "addResponse(answer, question.id)"}
                %textarea.form-control{:placeholder => "Type your comment", :rows => "5"}{"ng-model" => "answer"}
                %button{:type => "submit", 'ng-click'=> "showForm = !showForm"} Submit

              %p language: {{question.language}}
    %uib-tab
      %uib-tab-heading
        %i.icon-list
        All Questions
      .col-lg-12.b-a
        .panel.m-t-md{"ng-repeat" => "question in allQuestions | filter: search"}
          .wrapper-lg
            %h2.m-t-none
            %h3 {{question.title}}
            .text-muted

              %span Submited
              %i.icon-clock
              %time-ago{:format => "MM/dd/yyyy", "from-time" => "{{ question.created_at}}"}
              by
              %i.icon-fire
              %span
                %span {{question.student.name}}
              %span{"ng-if" => "question.response.status == false"} , Claimed {{question.response.created_at | amDifference : question.created_at : 'minutes' }} minutes later.
            %div
            %br
              %p {{question.body}}
              %div{"ng-if" => "question.response.status == true"}
                %h4 ANSWER:
                %p{"hm-dots-class" => "dots", "hm-less-text" => "read less", "hm-limit" => "100", "hm-link-class" => "links", "hm-more-text" => "read more", "hm-read-more" => "", "hm-text" => "{{question.response.answer}}"}
            .line.line-lg.b-b.b-light
            .text-muted

              %p{"ng-if" => "question.response.status == true"} Rate:
                %span {{question.rate.star}}/5


              %p language: {{question.language}}
